<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--it's a imagebutton that located in the center of screen-->
        <ImageButton
            android:id="@+id/playButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:paddingTop="200dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/descPlayButton"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:src="@drawable/play_button_svgrepo_com" />



        <!--it's a  textview with label "Timer"-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/timerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="20dp"
                android:gravity="center"
                android:textAllCaps="true"
                android:text="@string/timerOff"
                android:paddingEnd="15dp"
                android:paddingStart="0dp"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/timerSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:switchPadding="110dp"
                android:textAllCaps="true"
                android:gravity="bottom"
                android:textColor="@android:color/white"
                android:textSize="30sp" />


        </LinearLayout>


        <!--it's a  textView with text "Record : " down of the screen-->



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="@string/record"
                android:paddingBottom="20dp"
                android:gravity="bottom"
                android:paddingEnd="15dp"
                android:paddingStart="0dp"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/scoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text=""
                android:paddingBottom="20dp"
                android:gravity="bottom"
                android:textColor="@android:color/white"
                android:textSize="20sp" />


        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>